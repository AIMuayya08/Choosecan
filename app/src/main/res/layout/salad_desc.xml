<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_background"
        android:scaleType="centerCrop"
        android:alpha="0.2" />

    <!-- Top Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="Gambar Salad"
        android:scaleType="centerCrop"
        android:src="@drawable/salad_image"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title (Salad) -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salad"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/backgroundImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Ingredients Section -->
    <TextView
        android:id="@+id/ingredientsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INGRIDIENTS"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/backgroundImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />
    <HorizontalScrollView
        android:id="@+id/ingredientsScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/backgroundImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:translationY="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Ingredient Item 1 -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_margin="8dp">

                <!-- Background Shape -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ingridient_shape"
                    android:gravity="center"
                    android:orientation="vertical" />

                <!-- Texts -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SELADA"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="1 BUAH"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>
            </FrameLayout>

            <!-- Ingredient Item 2 -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_margin="8dp">

                <!-- Background Shape -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ingridient_shape"
                    android:gravity="center"
                    android:orientation="vertical" />

                <!-- Texts -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BUAH"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="3 BUAH"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>
            </FrameLayout>

            <!-- Ingredient Item 3 -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_margin="8dp">

                <!-- Background Shape -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ingridient_shape"
                    android:gravity="center"
                    android:orientation="vertical" />

                <!-- Texts -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AIR JERUK"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:translationY="-10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="1 SDM"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>
            </FrameLayout>

            <!-- Ingredient Item 4 -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_margin="8dp">

                <!-- Background Shape -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ingridient_shape"
                    android:gravity="center"
                    android:orientation="vertical" />

                <!-- Texts -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MINYAK ZAITUN"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:translationY="-10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="1 SDM"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>
            </FrameLayout>

            <!-- Ingredient Item 5 -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_margin="8dp">

                <!-- Background Shape -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ingridient_shape"
                    android:gravity="center"
                    android:orientation="vertical" />

                <!-- Texts -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GARAM"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="SECUKUPNYA"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:gravity="center" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/Langkah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps by Steps"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/backgroundImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:translationY="170dp"/>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="
Persiapan Bahan:

Cuci bersih selada dan tomat.

Membuat Salad:

Letakkan selada dan tomat dalam mangkuk.
Taburi sedikit garam, tambahkan air jeruk lemon, dan minyak zaitun jika menggunakan.
Aduk rata.
Penyajian:

Sajikan segera."
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/backgroundImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:translationY="200dp"/>
</ScrollView>
    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/buttom_menu"
        app:labelVisibilityMode="labeled" />

</androidx.constraintlayout.widget.ConstraintLayout>
