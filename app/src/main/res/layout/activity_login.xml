<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround_login"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Login Text -->
    <TextView
        android:id="@+id/login_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:text="LOGIN"
        android:textColor="#FF8000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:translationY="175dp" />

    <!-- Username Input -->
    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:hint="Username"
        android:layout_marginTop="12dp"
        android:background="@drawable/radius_edit"
        android:padding="12dp"
        android:textColor="#FF8000"
        android:textColorHint="#FFA07A"
        android:inputType="text"
        android:translationY="180dp" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:hint="Password"
        android:layout_marginTop="12dp"
        android:background="@drawable/radius_edit"
        android:padding="12dp"
        android:textColor="#FF8000"
        android:textColorHint="#FFA07A"
        android:inputType="textPassword"
        android:translationY="180dp" />

    <!-- Login Button -->
    <Button
        android:id="@+id/gasken_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="GASKEN"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:translationY="180dp" />

    <!-- Register Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:translationY="185dp">

        <!-- Text -->
        <TextView
            android:id="@+id/register_text_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum punya akun?"
            android:textColor="#FFFFFF" />

        <!-- Register Button -->
        <TextView
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Daftar"
            android:textColor="#2196F3"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
